<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:converters="clr-namespace:Heating_Control_UI.Converters"
					>

	<converters:MinSizeConverter x:Key="MinSizeConverter"/>
	
	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Dark">
			<SolidColorBrush x:Key="FontColor">#ffffff</SolidColorBrush>
			<SolidColorBrush x:Key="Accent">#88304E</SolidColorBrush>			
			<SolidColorBrush x:Key="RegionColor">#1F1F1F</SolidColorBrush>
		</ResourceDictionary>
		<ResourceDictionary x:Key="Light">
			<SolidColorBrush x:Key="FontColor">#000000</SolidColorBrush>
			<SolidColorBrush x:Key="Accent">#705697</SolidColorBrush>
			<SolidColorBrush x:Key="RegionColor">#F5F5F5</SolidColorBrush>
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
