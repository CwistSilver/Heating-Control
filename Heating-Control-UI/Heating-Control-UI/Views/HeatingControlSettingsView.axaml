<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:views="clr-namespace:Heating_Control_UI"
			 xmlns:vm="using:Heating_Control_UI.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:HeatingControlSettingsViewModel"
			 x:Class="Heating_Control_UI.HeatingControlSettingsView">
	<Grid RowDefinitions="*,auto">
		<StackPanel>
			<views:TemperatureSelector CurrentTemperature="{Binding Gradient}" Title="Neigung" />
			<views:TemperatureSelector CurrentTemperature="{Binding Baseline}" Title="Level" />
		</StackPanel>

		<Grid Grid.Row="1" ColumnDefinitions="*,*">
			<Button Grid.Column="0" Content="Abbrechen" Command="{Binding CancelAction}" HorizontalAlignment="Stretch"/>
			<Button Grid.Column="1" Content="Speichern" Command="{Binding Save}" HorizontalAlignment="Stretch"/>
		</Grid>

		<Grid Grid.RowSpan="2" RowDefinitions="*,*,*" IsVisible="{Binding IsSaving}">
			<Rectangle Grid.RowSpan="3" Fill="Black" Opacity="0.3" />
			<views:ProgressIndicator Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
			<TextBlock Text="Is Loading" Grid.Row="2" TextAlignment="Center"/>
		</Grid>
	</Grid>

</UserControl>
