<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Heating_Control_UI"
		 xmlns:controls2="using:Heating_Control_UI.Views">
	<Design.PreviewWith>
		<Grid Height="50" Width="650">
			<controls:ShellControl>
				<Rectangle Fill="Pink"/>
				
			</controls:ShellControl>
		</Grid>
	</Design.PreviewWith>

	<Style Selector="controls|ShellControl">
		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

					<SplitView x:Name="SplitView"
				  IsPaneOpen="True"
				  DisplayMode="Inline"							   
				  OpenPaneLength="300">
						<SplitView.Pane>
							<TextBlock Text="Pane content "/>
						</SplitView.Pane>
						<Grid>
							<ContentPresenter x:Name="PART_ContentPresenter" Content="{TemplateBinding Content}"/>
						</Grid>
					</SplitView>

					<Button VerticalAlignment="Top" HorizontalAlignment="Left">
						=
					</Button>
				</Grid>
			
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
