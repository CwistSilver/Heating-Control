<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Heating_Control_UI"
             x:Class="Heating_Control_UI.App"
             RequestedThemeVariant="Default">
	<Application.Resources>
	
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Accents/ApplicationResourceDictionary.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>

	</Application.Resources>


	<Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>


	<Application.Styles>
		<FluentTheme>
			<FluentTheme.Palettes>
				<ColorPaletteResources x:Key="Light" Accent="#705697" RegionColor="#F5F5F5" ErrorText="Red" />
				<ColorPaletteResources x:Key="Dark" Accent="#88304E" RegionColor="#1F1F1F" ErrorText="Yellow" />
			</FluentTheme.Palettes>
		</FluentTheme>
    </Application.Styles>
	
</Application>